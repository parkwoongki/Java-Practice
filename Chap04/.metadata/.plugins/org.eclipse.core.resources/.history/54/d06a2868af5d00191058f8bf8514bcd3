package Chap12;

import java.util.Scanner;

class Seat {
	String[] seat = { "---", "---", "---", "---", "---", "---", "---", "---",
			"---", "---" };

	public void setSeat(String name, int num) {
		seat[num - 1] = name;
	}

	public void show() {
		for (int i = 0; i < seat.length; i++) {
			System.out.print(seat[i] + " ");
		}
	}
}

class ReservationSystem {
	Scanner scanner = new Scanner(System.in);
	Seat[] seat = new Seat[3]; // 0:S, 1:A, 2:B

	public ReservationSystem() {
		for (int i = 0; i < seat.length; i++) {
			seat[i] = new Seat();
		}
	}

	public void resv() {
		System.out.print("좌석구분 S(1), A(2), B(3)>>");
		int seatClass = scanner.nextInt();
		System.out.print("이름>>");
		String name = scanner.next();
		int num = scanner.nextInt();
		seat[seatClass - 1].setSeat(name, num);
		// seatClass는 어떤 클래스의 좌석인지, num은
		// 그중에서 몇번째 좌석인지
	}

	public void inquiry() {
		System.out.print("좌석구분 S(1), A(2), B(3)>>");
		int seatClass = scanner.nextInt();
		seat[seatClass - 1].rerv();
	}

	public void cancel() {

	}

	public boolean finish() {
		System.out.println("종료됩니다.");
		return false;
	}

	public void run() {
		System.out.println("명품콘서트홀 예약 시스템입니다.");
		while (true) {
			System.out.print("예약:1, 조회:2, 취소:3, 끝내기:4>>");
			int mode = scanner.nextInt();
			boolean isNotFin = true;

			switch (mode) {
			case 1:
				resv();
				break;
			case 2:

				break;
			case 3:

				break;
			case 4:
				isNotFin = finish();
				break;
			default:
				System.out.println("해당하는 메뉴가 존재하지 않습니다.");
				break;
			}
		}
	}
}

public class Chap12 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 공연은 하루에 한번
		// 좌석 s a b 석
		// 예약 시스템 : 클래스 - 예약, 조회, 취소, 끝내기
		// 예약은 한자리만 좌석타입, 번호 전달

		// 좌석 : 클래스
		// 예약취소는 이름을 받아와서 반복문으로 이름 비교후 있으면 --- 로 다시 넣기
		// 없는 이름, 없는 번호, 잘못 취소는 다시 치케 반복문 처리

	}

}
