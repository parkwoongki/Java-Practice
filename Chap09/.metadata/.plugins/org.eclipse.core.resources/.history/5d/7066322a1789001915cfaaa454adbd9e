package Prob03;

import java.awt.Container;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JTextField;

public class Prob03 extends JFrame {
	private static final long serialVersionUID = -7893407115719664495L;

	public Prob03() {
		// TODO Auto-generated constructor stub
		setTitle("Ten Color Buttons Frame");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		GridLayout grid = new GridLayout(1, 10);
		
		Container c = new Container();
		c.setLayout(grid);
		c.add(new JTextField("0"));	
		c.add(new JTextField("1"));	
		c.add(new JTextField("2"));	
		c.add(new JTextField("3"));	
		c.add(new JTextField("4"));	
		c.add(new JTextField("5"));	
		c.add(new JTextField("6"));	
		c.add(new JTextField("7"));	
		c.add(new JTextField("8"));	
		c.add(new JTextField("9"));	
		

		setSize(400, 200);
		setVisible(true);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new Prob03();
	}

}
