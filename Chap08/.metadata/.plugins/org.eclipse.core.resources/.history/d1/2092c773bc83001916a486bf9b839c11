package Prob07;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

public class Prob07 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		byte buf[] = new byte[1024 * 10];

		System.out.println("a.jpg를 b.jpg로 복사합니다.");
		System.out.println("10%마다 *를 출력합니다.");

		try {
			File fa = new File("a.zip");
			FileInputStream fin = new FileInputStream("a.jpg");
			File fb = new File("b.zip");
			FileOutputStream fout = new FileOutputStream("b.jpg");
			int count = 1;

			System.out.println(fa.length());
			System.out.println(fb.length());

			while (true) {
				int n = fin.read(buf);
				fout.write(buf, 0, n);
				if (n < buf.length)
					break;
				if (fa.length() > fb.length() + (fb.length()+fb.length()*count/buf.length)) {
					System.out.print("*");
					count++;
				}
			}
			System.out.println("*"); // 마지막

			fout.close();
			fin.close();
		} catch (IOException e) {
			System.out.println("입출력 오류");
		}

	}

}
